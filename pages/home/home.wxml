<!--pages/home/home.wxml-->
<!-- 小程序的数据绑定 {{}}->  注意：小程序中没有双向绑定-->
<view>{{name}}</view>
<view>我的年龄：{{age}}</view>

<!-- 小程序的列表渲染 wx:for -->
<view wx:for="{{movies}}">{{'00' + item.id}}--{{item.name}}--{{item.year}}</view>

<!-- 事件监听 bindtap="函数名称"-->
<view>点击次数：{{count}}</view>
<button size="mini" bindtap="addcountClick">+</button>
<button size="mini" bindtap="delcountClick">-</button>