<!--pages/wxml/wxml.wxml-->
<!-- wxml格式 类似html -->
<!-- Mustache语法 -->
<view>{{welcome}}</view>
<view>{{age > 18? '成年人':'未成年'}}</view>
<view class="{{isActive? 'datacolor1':'datacolor2' }}">{{nowTime}}</view>
<button size="mini" bindtap="tabcolor">切换时间颜色</button>
<!-- IF -->
<view wx:if="{{age>30}}">我老了</view>
<view wx:elif="{{age>18}}">我成年了</view>
<view wx:else>我未成年</view>
